@model IEnumerable<BankEmprestimoConsignado.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Cliente</h1>

@*Adicionado*@
<a asp-action="Create" class="u-border-none u-btn u-btn-round u-button-style u-custom-color-1 u-dialog-link u-hover-palette-1-light-1 u-radius-4 u-text-body-color u-btn-4">Adicionar novo</a>
<div class="u-align-left-md u-align-left-sm u-align-left-xs u-expanded-width-md u-expanded-width-sm u-expanded-width-xs u-table u-table-responsive u-table-1">
<table class="table">
    <thead>
        <tr>
            <th class="u-custom-color-2">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="u-custom-color-2">
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th class="u-custom-color-2">
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th class="u-custom-color-2">
                @Html.DisplayNameFor(model => model.Profissao)
            </th>
            <th class="u-custom-color-2">
                @Html.DisplayNameFor(model => model.Margem)
            </th>
            <th class="u-custom-color-2">
                @Html.DisplayNameFor(model => model.MargemCartao)
            </th>
            <th class="u-custom-color-2">
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th class="u-custom-color-2">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="u-custom-color-2"></th>
        </tr>
    </thead>
  <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profissao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Margem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MargemCartao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a class="u-btn-round u-button-style u-custom-color-1 u-dialog-link u-hover-palette-1-light-1 u-radius-4 u-text-body-color u-btn-2" asp-action="Edit" asp-route-id="@item.IdCliente">Alterar</a> |
                <a class="u-btn-round u-button-style u-custom-color-1 u-dialog-link u-hover-palette-1-light-1 u-radius-4 u-text-body-color u-btn-2" asp-action="Details" asp-route-id="@item.IdCliente">Detalhes</a> |
                <a class="u-btn-round u-button-style u-custom-color-1 u-dialog-link u-hover-palette-1-light-1 u-radius-4 u-text-body-color u-btn-2" asp-action="Delete" asp-route-id="@item.IdCliente">Excluir</a>
            </td>
        </tr>
}
   </tbody>
</table>
</div>
    